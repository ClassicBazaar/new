{{! mens products }}

{{#each result}}
    {{#if even}}
            <section class="bg-dark" id="{{this.name}}">
    {{else}}
            <section class="bg-success " id="{{this.name}}">
    {{/if}}
    {{!-- <section class="bg-success" id="{{this.name}}"> --}}
        <div class="container">
            <div class="row">
                <div class="col-12 mt-5">
                    <h1
                        class="text-center text-light mt-3 mb-3"
                    >{{this.name}}</h1>
                </div>
                <div class="col-12">
                    <hr
                        class="text-light mb-5"
                        style="width: 50%; margin-left: auto ; margin-right: auto; margin-top: 0px;"
                    />
                </div>

                {{#each this.product}}
                    <div class="col-md-4 col-12 mt-2 mb-5" style="z-index: 0; ">
                        <div class="card">
                            <a
                                href="/details/{{this._id}}"
                                class="text-decoration-none text-dark"
                            >
                                <img
                                    src="{{this.image}}"
                                    class="card-img-top"
                                    alt="{{this.title}}"
                                />
                            </a>
                            <div class="card-body bg-light">

                                <h5 class="card-title">{{this.name}}</h5>
                                <hr />
                                <div
                                    style="background-color: rgb(147, 234, 181);; border-radius: 1em;"
                                >
                                    <p
                                        class="card-text text-decoration-underline"
                                        style="color: darkgreen; margin-left: 1em;  "
                                    >
                                        {{this.offer}}% off
                                    </p>
                                </div>
                                <p class="card-text mt-1">Price: ₹<span
                                        style="color: #896633;"
                                        class="text-decoration-underline"
                                    >{{this.price}}</span></p>
                                <div
                                    style="background-color: rgb(180, 180, 180); border-radius: 1em; margin-top: -0.5em;"
                                >
                                    <p
                                        class="card-text"
                                        style="margin-left: 1em;"
                                    ><span class="text-dark">Delivery Charge</span>:
                                        <span
                                            class="text-success"
                                        >{{this.charge}}</span>
                                    </p>
                                </div>
                                <button
                                    class="btn mt-1 m-auto w-100 mt-3"
                                    onclick="addtocart('{{this._id}}')"
                                    style="background-color: #896633; color: white; "
                                >
                                    <i class="bi bi-cart4"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                {{/each}}

            </div>
        </div>
    </section>
{{/each}}
