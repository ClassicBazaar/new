<section
    style="padding-top: 5em; padding-bottom: 3em;"
    class="bg-dark min-vh-100"
>

    {{! heading }}
    <div class="container">
        <div class="row" style="padding-bottom: 5em;">
            <div class="col-12">
                <h2 class="text-white text-center">{{product.name}}</h2>
            </div>
            <div class="col-12 m-auto">
                <hr class="w-50 m-auto text-white" />
            </div>
            <br />
        </div>
    </div>
    {{! details }}
    <div
        class="half details w-100 bg-success"
        style=" bottom:0; border-bottom: solid; border-top-right-radius: 3em;border-top-left-radius: 3em;"
    >
        <div
            id="carouselId"
            class="carousel w-50"
            data-bs-ride="carousel"
            style="margin-top: -25%!important ;  margin-left: 25%; position: absolute;"
        >
            <ol class="carousel-indicators">
                <li
                    data-bs-target="#carouselId"
                    data-bs-slide-to="0"
                    class="active"
                    aria-current="true"
                    aria-label="First slide"
                ></li>
                <li
                    data-bs-target="#carouselId"
                    data-bs-slide-to="1"
                    aria-label="Second slide"
                ></li>
                <li
                    data-bs-target="#carouselId"
                    data-bs-slide-to="2"
                    aria-label="Third slide"
                ></li>
            </ol>
            <div class="carousel-inner" role="listbox">
                <div class="carousel-item active">
                    <img
                        src="{{product.image}}"
                        class="w-100 d-block rounded-circle"
                        alt="First slide"
                    />
                </div>
                <div class="carousel-item">
                    <img
                        src="{{product.image2}}"
                        class="w-100 d-block rounded-circle"
                        alt="Second slide"
                    />
                </div>
                <div class="carousel-item">
                    <img
                        src="{{product.image3}}"
                        class="w-100 d-block rounded-circle"
                        alt="Third slide"
                    />
                </div>
            </div>
        </div>

        {{!-- <img
            src="{{product.image}}"
            class="text-center rounded-circle w-50"
            style="margin-top: -25%!important ; margin-left: 25%; position: absolute;"
        /> --}}

        <div class="container" style="padding-top: 25%;">
            <div class="row">
                <div class="col-12">
                    <h4 class="text-white text-center mt-3">price:
                        <span class="text-warning">₹{{product.price}}</span>
                    </h4>
                </div>
                <div class="col-12">
                    <h4 class="text-white text-center mt-3">offer:
                        <span class="text-dark">{{product.offer}}%</span>
                    </h4>
                </div>
                <div class="col-12">
                    <h4 class="text-white text-center mt-3">Delivery charge:
                        <span class="text-info">₹{{product.charge}}</span>
                    </h4>
                </div>
                <div class="col-6 m-auto pb-5">
                    <button
                        class="btn mt-1 m-auto w-100 mt-3"
                        onclick="addtocart('{{product._id}}')"
                        style="background-color: #896633; color: white; "
                    >
                        <i class="bi bi-cart4"></i>
                    </button>
                </div>
            </div>
        </div>

    </div>
</section>
