<section style="padding-top: 5em; padding-bottom: 5em">
    <div class="container">
        <div class="row">
            <h1 class="text-center text-success">Ordered products</h1>
            <div class="col-12 text-center">
                <hr class="text-center w-50 m-auto" />
            </div>
            {{#each products}}
                <div class="col-12 col-md-3 m-auto">
                    <div class="card h-100">
                        <img
                            src="/product-images/{{this.product._id}}.jpg"
                            class="card-img-top img-fluid"
                            alt="{{this.product.name}}"
                        />
                        <div class="card-body bg-light">

                            <h5 class="card-title">{{this.product.name}}</h5>
                            <hr />
                            <p
                                class="card-text mt-1"
                                style="margin-left: 1em;"
                            >Price: ₹<span
                                    style="color: #896633; "
                                    class="text-decoration-underline"
                                >{{this.product.price}}</span></p>
                            <div
                                style="background-color: rgb(147, 234, 181);; border-radius: 1em;  margin-top: -0.5em;"
                            >
                                <p
                                    class="card-text text-decoration-underline"
                                    style="color: darkgreen; margin-left: 1em;  "
                                >
                                    Quantity :
                                    {{this.quantity}}
                                </p>
                            </div>
                            <div
                                style="background-color: rgb(180, 180, 180); border-radius: 1em; margin-top: 1em;"
                            >
                                <p
                                    class="card-text"
                                    style="margin-left: 1em;"
                                ><span class="text-dark">Status</span>:
                                    <span
                                        class="text-dark"
                                    >{{this.status}}</span>
                                </p>
                            </div>

                        </div>
                    </div>
                </div>
            {{/each}}
            <div class="col-12 col-md-12 text-center m-md-auto mb-5">
                <div
                    class="card text-white bg-dark"
                    style="border-radius: 2em;"
                >
                    <div class="card-body">
                        <h4 class="card-title">Ordered placed on
                            <span class="text-success">
                                {{about.date}}/{{about.month}}/{{about.year}}</span></h4>
                        <H6 class="">Total Amount:
                            <span
                                class="text-success"
                            >₹{{about.price}}</span></H6>
                        <p class="card-text">status:
                            <span class="text-success"><span id="status-pre">{{about.status}}</span>
                                <span>↓</span>
                            </span>
                            <br />
                            <button
                                class="btn btn-warning mt-2"
                                onclick=" Status('pending','{{about._id}}') "
                            >pending</button>
                            <button
                                class="btn btn-success mt-2"
                                onclick="Status('ordered','{{about._id}}')"
                            >Ordered</button>
                            <br>
                            <a
                                onclick="return confirm('are you Sure you want to delete this order from the all orders')"
                                class="btn btn-danger mt-2"
                                href="/admin/delete-order/{{about._id}}"
                            >Delete this order</a>
                        </p>

                    </div>
                    {{! drop down account }}
                    <div class="dropup m-auto mb-2">
                        <button
                            class="btn btn-light dropdown-toggle"
                            type="button"
                            id="triggerId"
                            data-bs-toggle="dropdown"
                            aria-haspopup="true"
                            aria-expanded="false"
                        >
                            Address
                        </button>
                        <div
                            class="dropdown-menu"
                            aria-labelledby="triggerId"
                            style="z-index: 0;"
                        >
                            <h6 class="dropdown-item">Name :
                                {{about.address.fname}}{{about.address.lname}}</h6>
                            <h6 class="dropdown-item">Email :
                                {{about.address.email}}</h6>
                            <h6 class="dropdown-item">phone: +{{about.address.countryphonenumber}}
                                {{about.address.number}}</h6>
                            <h6 class="dropdown-item">address :
                                {{about.address.address}}</h6>
                            {{!-- <h6 class="dropdown-item">Unit:
                                    {{about.address.unit}}</h6>
                                <h6 class="dropdown-item">Size :
                                    {{about.address.size}}</h6> --}}
                            <h6 class="dropdown-item">state :
                                {{about.address.state}}</h6>
                            <h6 class="dropdown-item">City :
                                {{about.address.city}}</h6>
                            <h6 class="dropdown-item">road/area/colony :
                                {{about.address.roadareacolony}}</h6>
                            <h6 class="dropdown-item">Pincode :
                                {{about.address.pincode}}</h6>
                            <h6 class="dropdown-item">House no. :
                                {{about.address.housenumber}}</h6>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
